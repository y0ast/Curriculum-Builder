<h1>Create a course:</h1>

<div class="row">
  <div class="span6 offset5">
    <%= form_for(@course) do |f| %>

      <%= f.label :course_name %>
      <%= f.text_field :name %>

      <%= f.label :course_code %>
      <%= f.text_field :coursecode %>

      <%= f.label :description %>
      <%= f.text_area :description, :rows => 3 %>

      <%= f.label :teacher %>
      <%= f.text_field :teacher %>

      <%= f.label :track %>
      <%= f.text_field :track %>

      <%= f.label :level %>
      <%= f.select(:level, options_for_select([[100,100],[200,200],[300,300]])) %>

      <%= f.label :period %>
      <%= f.collection_select(:period_id, Period.all, :id, :offered_in) %>

      <%= f.label :major %>
      <%= f.collection_select(:period_id, Major.all, :id, :name) %>

      <%= f.submit "Create this course", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
